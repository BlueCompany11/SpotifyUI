<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:core="clr-namespace:SpotifyUI.MenuBar.Controls">
    <Style x:Name="MenuItemControlStyle" TargetType="core:MenuItemControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="core:MenuItemControl">
                    <Button>
                        <StackPanel Orientation="Horizontal">
                            <Path Width="30"
                                  Margin="0,0,10,0"
                                  Data="{Binding Image}"></Path>
                            <Label Content="{Binding Text}"></Label>
                        </StackPanel>
                    </Button>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>